#   -------------------------------

#   Change Prompt
#   ------------------------------------------------------------
    export PS1="\[$(tput setaf 7)\]\u@\H [\t] \w \n \# \s \$\[$(tput sgr0)\] "
    export PS2="| => "


#   Set Paths
#   ------------------------------------------------------------
#   export PATH="$PATH:/usr/local/bin/"
#   export PATH="$PATH:/Users/szabolcs/Documents/dev/scala/scala-2.11.2/bin/"

#   Overwrite the default Java version
#   export JAVA_HOME="/Library/Java/JavaVirtualMachines/jdk1.7.0_55.jdk/Contents/Home"
#   export PATH=$JAVA_HOME:$PATH
#   export PATH=$JAVA_HOME/bin:$PATH

#   The next line updates PATH for the Google Cloud SDK.
    source /Users/szabolcs/Documents/JavaLibs/google-cloud-sdk/path.bash.inc

#   The next line enables bash completion for gcloud.
    source /Users/szabolcs/Documents/JavaLibs/google-cloud-sdk/completion.bash.inc

#   Maven setup
    export M2_HOME=/usr/local/apache-maven/apache-maven-3.2.1
    export M2=$M2_HOME/bin
    export MAVEN_OPTS="-Xms256m -Xmx512m"
    export PATH=$M2:$PATH


#   Set Default Editor (change 'Nano' to the editor of your choice)
#   ------------------------------------------------------------
    export EDITOR=/usr/bin/vim

#   Set default blocksize for ls, df, du
#   from this: http://hints.macworld.com/comment.php?mode=view&cid=24491
#   ------------------------------------------------------------
    export BLOCKSIZE=1k

